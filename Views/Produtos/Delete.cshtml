@model MvcWebIdentity.Entities.Produto

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3> Você quer Realmente Excluir esse Produto?</h3>
<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
      
    </dl>

    <form asp-action="Delete">
